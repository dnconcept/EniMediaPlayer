<div class="row hidden-print">
    <div class="col-md-3 col-xs-12 text-center">
        <div class="btn-group btn-group-player">
            <button id="prevSong" class="btn btn-default">
                <i class="fa fa-fast-backward"></i>
            </button>
            <button id="btnPlay" class="btn btn-default">
                <i id="playIcon" class="fa fa-play"></i> Play
            </button>
            <button id="nextSong" class="btn btn-default">
                <i class="fa fa-fast-forward"></i>
            </button>
        </div>
        <br/>
        <br/>
        <div class="btn-group">
            <button id='minVolume' class="btn btn-default">
                <i class="fa fa-volume-down"></i>
            </button>
            <button class="btn btn-default">
                <input id="rangeVolume" type="range" min="0" max="100" value="0" step="1"/>
                <span id="volumeText"></span>
            </button>
            <button id='maxVolume' class="btn btn-default"><i class="fa fa-volume-up"></i></button>
        </div>
    </div>
    <div class="col-md-5 col-sm-6 col-xs-12">
        <p class="control-label name" id="name"><b>Nom Artiste</b></p>
        <p class="control-label title" id="title"><b>Titre de la chanson</b></p>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <input id="rangeAvancement" type="range" min="0" max="100" value="0"/>
            <audio ontimeupdate="update(this)" id="mediaPlayer"/>
        </div>
        <p class="control-label "><span id="timeNow">0:00</span> / <span id="timeTot">0:00</span></p>
    </div>
    <div class="col-md-4">
        <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-search"></i></div>
            <input type="text" id="recherche" class="form-control" placeholder="Recherche" onkeyup="filtre();">
        </div>
        <button id="btnRandom" class="btn btn-default">
            <i class="fa fa-random"></i>
        </button>
        <span class="switch">
            <label>
                Off
                <input type="checkbox" id="random">
                <span class="lever"></span>
                On
            </label>
        </span>
    </div>
</div>
